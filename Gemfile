# frozen_string_literal: true

source 'https://rubygems.org'
gemspec

# The best way to manage your application's dependencies (https://bundler.io)
gem "bundler", "~> 2.1.4"

group :development do
  # Add comments to your Gemfile with each dependency's description.
  # (https://github.com/ivantsepp/annotate_gem)
  gem "annotate_gem", require: false

  # Pretty print Ruby objects with proper indentation and colors
  # (https://github.com/awesome-print/awesome_print)
  gem "awesome_print", require: false

  # Fast syntax highlighting for selected languages.
  # (http://coderay.rubychan.de)
  gem "coderay", require: false

  # Guard keeps an eye on your file modifications (http://guardgem.org)
  gem "guard", require: false

  # Guard gem for RSpec (https://github.com/guard/guard-rspec)
  gem "guard-rspec", require: false

  # Guard plugin that automatically executes a configured shell script when
  # files are updated
  gem "guard-sheller", require: false

  # Ruby bindings for libnotify using FFI (http://rubygems.org/gems/libnotify)
  gem "libnotify", require: false

  # A runtime developer console and IRB alternative with powerful introspection
  # capabilities. (http://pry.github.io)
  gem "pry", require: false

  # Fast debugging with Pry. (https://github.com/deivid-rodriguez/pry-byebug)
  gem "pry-byebug", require: false
end

group :test do
  # aruba-1.0.3 (https://github.com/cucumber/aruba)
  gem "aruba", "~> 1.0", require: false

  # aruba-doubles-1.2.1 (https://github.com/bjoernalbers/aruba-doubles)
  gem "aruba-doubles", "~> 1.2", require: false
  #  git: "https://github.com/cvoltz/aruba-doubles.git",
  #  require: false

  # Bridge RSpec and Aruba to test command-line tools
  # (https://github.com/livinginthepast/aruba-rspec)
  gem "aruba-rspec", "~> 1.0", require: false

  # cucumber-5.2.0 (https://cucumber.io/)
  gem "cucumber", "~> 5.2", require: false

  # A fistful of code metrics, with awesome templates and graphs
  # (https://github.com/metricfu/metric_fu)
  gem "metric_fu", require: false

  # Fast Implementation of Gruber's Markdown in C
  # (http://dafoster.net/projects/rdiscount/)
  gem "rdiscount", require: false

  # Rake is a Make-like program implemented in Ruby
  # (https://github.com/ruby/rake)
  gem "rake", "~> 13.0", require: false

  # rspec-3.10.0 (http://github.com/rspec)
  gem "rspec", "~> 3.10", require: false

  # rspec-collection_matchers-1.2.0
  # (https://github.com/rspec/rspec-collection_matchers)
  gem "rspec-collection_matchers", require: false

  # rspec-expectations-3.10.0 (https://github.com/rspec/rspec-expectations)
  gem "rspec-expectations", "~> 3.10", require: false

  # rspec-mocks-3.10.0 (https://github.com/rspec/rspec-mocks)
  gem "rspec-mocks", "~> 3.10", require: false

  # Automatic Ruby code style checking tool.
  # (https://github.com/rubocop-hq/rubocop)
  gem "rubocop", require: false

  # Automatic performance checking tool for Ruby code.
  # (https://github.com/rubocop-hq/rubocop-performance)
  gem "rubocop-performance", require: false

  # A RuboCop plugin for Rake (https://github.com/rubocop-hq/rubocop-rake)
  gem "rubocop-rake", require: false

  # Code style checking for RSpec files
  # (https://github.com/rubocop-hq/rubocop-rspec)
  gem "rubocop-rspec", require: false

  # Thread-safety checks via static analysis
  # (https://github.com/covermymeds/rubocop-thread_safety)
  gem "rubocop-thread_safety", require: false

  # RubyCritic is a Ruby code quality reporter
  # (https://github.com/whitesmith/rubycritic)
  gem "rubycritic", require: false

  # Code coverage for Ruby (https://github.com/simplecov-ruby/simplecov)
  gem "simplecov", require: false

  # Default HTML formatter for SimpleCov code coverage tool for ruby 2.4+
  # (https://github.com/colszowka/simplecov-html)
  gem "simplecov-html", require: false

  # Rcov style formatter for SimpleCov
  # (http://github.com/fguillen/simplecov-rcov)
  gem "simplecov-rcov",
    git: "https://github.com/dwaller/simplecov-rcov.git",
    branch: "asset_output_path_warning",
    require: false

  # spork (http://github.com/timcharper/spork)
  gem "spork", "~> 0.9", require: false

  # Documentation tool for consistent and usable documentation in Ruby.
  # (http://yardoc.org)
  gem "yard", require: false

  # A YARD plugin that adds support for Appendix sections.
  # (https://github.com/amireh/yard-appendix)
  gem "yard-appendix", require: false

  # YARD documentation helper for ClassMethods-style modules.
  # (https://github.com/coderanger/yard-classmethods)
  gem "yard-classmethods", require: false

  # Add's coderay syntax highlighting to YARD docs
  # (https://github.com/sagmor/yard-coderay)
  gem "yard-coderay", require: false

  # A YARD plugin for parsing DataMapper model syntax.
  # (http://github.com/postmodern/yard-dm)
  gem "yard-dm", require: false

  # Get rid of the junk in your YARD docs (https://github.com/zverok/junk_yard)
  gem "yard-junk", require: false

  # YARD plugin to list RSpec specifications inside documentation
  # (http://yardoc.org)
  gem "yard-rspec", require: false

  # YARD plugin for documenting auto-generated members of Struct subclasses.
  # (http://github.com/michaeledgar/yard-struct)
  gem "yard-struct", require: false
end
